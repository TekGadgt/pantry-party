---
import Layout from '../layouts/Layout.astro';
import JoinRoomForm from '../components/JoinRoomForm';
---

<Layout title="Join Room - Pantry Party">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Join a Room</h1>
    
    <div class="bg-white p-8 rounded-lg shadow-md">
      <JoinRoomForm client:only="react" />
    </div>

    <div class="mt-8 text-center">
      <p class="text-gray-600">
        Don't have a room ID? 
        <a href="/create-room" class="text-primary-600 hover:text-primary-700 font-semibold">
          Create a new room
        </a>
      </p>
    </div>
  </div>
</Layout>
